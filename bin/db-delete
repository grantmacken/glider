#!/usr/bin/env bash
set -Eeuo pipefail
declare -a args
args=("$@")

function dash {
  printf %60s | tr ' ' '-' && echo
}

function msg() {
  echo >&2 -e "${1-}"
}

function die() {
  local msg=$(echo -n "âœ˜  " && echo $1)
  local code=${2-1} # default exit status 1
  msg "$msg"
  exit "$code"
}

case "${#args[@]}" in
1)
  SRC=src/data/$(echo $1 | grep -oP '^(src/data/)?\K(.+)$')
  URI="http://localhost:8081/db/$(echo $1 | grep -oP '^(src/data/)?\K(.+)$')"
  # [ -f  $SRC ] || die "$SRC: NOT a file "
  echo "##[ $URI ]##"
	curl -s --show-error \
    --dump-header - \
		-X DELETE \
		$URI
  ;;
*)
  die "Usage: $(basename "${BASH_SOURCE[0]}") [src] 1 arg required" 
  ;;
esac


case "${#args[@]}" in
1)
  BASE=$(echo $1 | grep -oP '^(src/data/)?\K(.+)$')
  SRC="src/data/$BASE"
  [ -f $SRC ] || die "[ $SRC ]: NOT a file "
  DIRNAME=$(dirname $BASE)
  BASENAME=$(basename $BASE)
  EXT="${BASENAME##*.}"
  RESOURCE="${BASENAME%.*}"
  dash
  URI="http://localhost:8081/db/${DIRNAME}/${RESOURCE}"
  echo ${URI}
  # use extension
  case ${EXT} in
  json)
    dash
  ;;
  xml)
  dash
  ;;
  md)
   dash
	 curl -s --show-error \
    --dump-header - \
		-X DELETE \
		$URI
    BUILD_HEADER="_build/data/$BASE"
     bin/db-available $SRC &>/dev/null || rm -f ${BUILD_HEADER}.headers
  ;;
  xq)
    dash
  ;;
  *)
    die " [ ${EXT} ] can not handle extension "
    ;;
  esac
  ;;
*)
  die "Usage: $(basename "${BASH_SOURCE[0]}") [src] 1 arg required"
  ;;
esac

