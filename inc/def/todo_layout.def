define todo_layout
function($$map as map(*)) as element() {
  element html {
    attribute lang {'en'},
    element head {
    element meta { attribute charset { "UTF-8"} },
    element title { '$(SCAFFOLD)' },
    element link { 
      attribute rel {"stylesheet"},
      attribute href { "/assets/styles/$(SCAFFOLD)/base.css"},
      attribute type {"text/css"}
    },
    element link {
      attribute rel {"stylesheet"}, 
      attribute href { "/assets/styles/$(SCAFFOLD)/index.css"},
      attribute type {"text/css"}
    }
  },
  element body {
    element header { 
      element h1 { 'todos' },
      element input { 
      attribute class {"new-todo"},
      attribute placeholder {"what needs to be done?"},
      attribute autofocus {"true"}
      }
    },
    element section { attribute class {"main"} },
    element footer { }
    }
  }
}
endef

